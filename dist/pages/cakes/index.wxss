.index_view {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.index_view .shopinfo_view {
  height: 10vh;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border: 1rpx solid red;
}
.index_view .shopinfo_view .switch_view {
  width: 25%;
  height: 65%;
  display: flex;
  flex-direction: row;
  border: 1rpx solid gray;
  border-radius: 50rpx;
  font-size: small;
}
.index_view .shopinfo_view .switch_view .switech_operation {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  width: 45%;
  margin: 2rpx;
}
.index_view .shopinfo_view .switch_view .switech_operationSelected {
  color: white;
  width: 55%;
  background: darkgray;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  margin: 2rpx;
}
.index_view .order_view {
  height: 90vh;
  display: flex;
  flex-direction: row;
}
.index_view .order_view .type_view {
  height: 100%;
  width: 20%;
  border-right: 1rpx solid black;
}
.index_view .order_view .type_view .type_swiper {
  height: 100%;
  border: 1rpx solid yellow;
}
.index_view .order_view .type_view .type_swiper .item_view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 1rpx solid red;
  font-size: small;
}
.index_view .order_view .type_view .type_swiper .item_view Image {
  width: 40rpx;
  height: 40rpx;
}
.index_view .order_view .type_view .type_swiper .item_view_hover {
  background: blue;
}
.index_view .order_view .goods_view {
  height: 100%;
  width: 80%;
}
.index_view .order_view .goods_view .goods_swiper {
  height: 100%;
  border: 1rpx solid green;
}
.index_view .order_view .goods_view .goods_swiper .item_view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border: 1rpx solid red;
}
.index_view .order_view .goods_view .goods_swiper .item_view Image {
  width: 150rpx;
  height: 150rpx;
}