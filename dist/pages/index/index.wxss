.index_view {
  border: 1rpx solid black;
  height: 100vh;
}
.index_view .swiper_view {
  height: 40vh;
}
.index_view .operation_view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 40vh;
}
.index_view .operation_view .btn_View {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx;
  width: 40%;
  height: 90%;
  box-shadow: gray 0 0 6rpx 6rpx;
  border-radius: 20rpx;
  z-index: 999;
}
.index_view .operation_view .btn_View .btn_image {
  width: 40%;
  height: 70rpx;
}
.index_view .points_view {
  border: 1rpx solid rebeccapurple;
  display: flex;
  flex-direction: row;
  justify-content: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
  height: 15vh;
}
.row_view {
  display: flex;
  flex-direction: row;
  align-items: center;
}